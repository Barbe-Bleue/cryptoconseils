{# src/CryptoConseils/BlogBundle/Resources/views/Article/index.html.twig #}

{% extends "CryptoConseilsBlogBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block cryptoconseilsblog_body %}

    <h2>Liste des articles</h2>

    <ul>
        {% for article in listArticles %}
            <li>
                <a href="{{ path('cryptoconseils_blog_view', {'id': article.id}) }}">
                    {{ article.title }}
                </a>
                par {{ article.author }},
                le {{ article.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>De nombreux articles Ã  venir !</li>
        {% endfor %}
    </ul>

{% endblock %}